// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Game {
  id         Int       @id @default(autoincrement())
  name       String
  premium    Boolean
  image      String
  popularity Int
  minplayers Int
  history    History[]
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  password     String
  premium      Boolean   @default(false)
  endPremiumAt DateTime?
  history      History[]
}

model History {
  id       Int      @id @default(autoincrement())
  idGame   Int
  idUser   Int
  game     Game     @relation(fields: [idGame], references: [id])
  user     User     @relation(fields: [idUser], references: [id])
  playedAt DateTime
  score    Int
  duration Int
}
