// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Game {
  id      Int       @id @default(autoincrement())
  name    String
  premium Boolean
  History History[]
}

model Player {
  id       Int       @id @default(autoincrement())
  username String
  premium  Boolean
  History  History[]
}

model History {
  idGame   Int
  idPlayer Int
  game     Game   @relation(fields: [idGame], references: [id])
  player   Player @relation(fields: [idPlayer], references: [id])

  @@id([idGame, idPlayer])
}
